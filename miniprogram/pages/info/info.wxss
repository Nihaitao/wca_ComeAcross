/* pages/info/info.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0 60rpx 0;
  box-sizing: border-box;
  background-color:whitesmoke;
}

.moreinfo{
  width: 100%;
}

.moreinfo-label{
  float: right;
  margin: -30rpx 30rpx 20rpx 0;
  font-size: 60rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-avatar-male{  
  border: 4rpx solid deepskyblue;  
}

.userinfo-avatar-female{  
  border: 4rpx solid pink;  
}

.userinfo-nickname {
  color:#888;
}

.userinfo-info{  
  color: orangered;
  margin: 10rpx auto;
  font-size: 30rpx;
}

.userinfo-attention {
  margin-right: 24rpx;
}

.userinfo-fans {
  margin-left: 24rpx;
} 

.page-section-gap{
  box-sizing: border-box;
  padding: 10rpx 10rpx;
  height: 100%;
}

.foot{
  position: absolute;
  height: 90rpx;
  width: 100%;
  bottom: 0; 
  background-color:whitesmoke;

}
.foot-view{    
  width: 100%;
  margin: 20rpx;
  display: flex;
}

.foot-view-left{  
  display: flex;
  justify-content:center ;
  flex:1;
  font-size: 32rpx;
  color: black;
}
.foot-view-right{
  display: flex;
  justify-content:center ;
  flex:1;
  font-size: 32rpx;
  color: black;
}
.foot-view-middle{  
  color: #aaa;
  font-size: 28rpx;
  margin-top: 2rpx;
}

.foot-label{
  color: #aaa;
  font-size: 28rpx;
  margin: 5rpx 10rpx; 
}



